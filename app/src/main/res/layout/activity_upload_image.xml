<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Activity.UploadImageActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Select your profile puctire"
        android:gravity="center"
        android:textColor="@color/colorMaroon"
        />
    <ImageView
        android:id="@+id/img_uploadImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/colorGray"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btn_uploadImage_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="use camera"
        android:background="@drawable/background_btn_select"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"

        />

    <Button
        android:id="@+id/btn_uploadImage_gallary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="use Gallary"
        android:background="@drawable/background_btn_select"
        android:layout_marginHorizontal="20dp"
        />

    <Button
        android:id="@+id/btn_uploadImage_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="upload"
        android:background="@drawable/background_btn_next"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        />

    <Button
        android:id="@+id/btn_uploadImage_later"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Later"
        android:background="@null"
        android:padding="20dp"
        android:textColor="@color/colorBlue"
        android:layout_marginHorizontal="20dp"
        android:textAllCaps="false"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        />






</LinearLayout>